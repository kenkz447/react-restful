{
    "testEnvironment": "node",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
        "ts-jest": {
            "tsConfig": "tsconfig.json"
        }
    },
    "testMatch": [
        "**/__tests__/*.+(ts|tsx|js)"
    ],
    "setupFiles": [
        "./__mocks__/client.js",
        "./__mocks__/fetch.js"
    ]
}